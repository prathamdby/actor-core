{
  "name": "actor-core",
  "version": "0.3.0",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src",
    "deno.json",
    "bun.json",
    "package.json"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/mod.d.ts",
        "default": "./dist/mod.js"
      },
      "require": {
        "types": "./dist/mod.d.cts",
        "default": "./dist/mod.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client/mod.d.ts",
        "default": "./dist/client/mod.js"
      },
      "require": {
        "types": "./dist/client/mod.d.cts",
        "default": "./dist/client/mod.cjs"
      }
    },
    "./log": {
      "import": {
        "types": "./dist/common/log.d.ts",
        "default": "./dist/common/log.js"
      },
      "require": {
        "types": "./dist/common/log.d.cts",
        "default": "./dist/common/log.cjs"
      }
    },
    "./actor/errors": {
      "import": {
        "types": "./dist/actor/errors.d.ts",
        "default": "./dist/actor/errors.js"
      },
      "require": {
        "types": "./dist/actor/errors.d.cts",
        "default": "./dist/actor/errors.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.js"
      },
      "require": {
        "types": "./dist/utils.d.cts",
        "default": "./dist/utils.cjs"
      }
    },
    "./driver-helpers": {
      "import": {
        "types": "./dist/driver-helpers.d.ts",
        "default": "./dist/driver-helpers.js"
      },
      "require": {
        "types": "./dist/driver-helpers.d.cts",
        "default": "./dist/driver-helpers.cjs"
      }
    },
    "./topologies/p2p": {
      "import": {
        "types": "./dist/topologies/p2p/mod.d.ts",
        "default": "./dist/topologies/p2p/mod.js"
      },
      "require": {
        "types": "./dist/topologies/p2p/mod.d.cts",
        "default": "./dist/topologies/p2p/mod.cjs"
      }
    },
    "./topologies/isolated": {
      "import": {
        "types": "./dist/topologies/isolated/mod.d.ts",
        "default": "./dist/topologies/isolated/mod.js"
      },
      "require": {
        "types": "./dist/topologies/isolated/mod.d.cts",
        "default": "./dist/topologies/isolated/mod.cjs"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/mod.ts src/client/mod.ts src/common/log.ts src/actor/errors.ts src/topologies/p2p/mod.ts src/topologies/isolated/mod.ts src/utils.ts src/driver-helpers.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "cbor-x": "^1.6.0",
    "hono": "^4.7.0",
    "on-change": "^5.0.1",
    "p-retry": "^6.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "eventsource": "^3.0.5",
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "eventsource": {
      "optional": true
    },
    "ws": {
      "optional": true
    }
  }
}
