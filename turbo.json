{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#fmt": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "tsup.config.ts", "package.json"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "inputs": ["src/**", "tsconfig.json", "tsup.config.ts", "package.json"],
      "dependsOn": ["^build"]
    }
  }
}
